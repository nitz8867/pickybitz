<section class="reg-new" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>

                <form class="new_user mx-1 mx-md-4" id="new_user" action="/users" accept-charset="UTF-8" method="post">
                  <input type="hidden" name="authenticity_token" autocomplete="off" value="<%= form_authenticity_token %>">

                  <div class="field">
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                      <div data-mdb-input-init class="form-outline flex-fill mb-0">
                        <input placeholder="Your Name" type="text" id="user_name" name="user[name]" autocomplete="name" class="form-control" />
                      </div>
                    </div>
                  </div>

                  <div class="field">
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                      <div data-mdb-input-init class="form-outline flex-fill mb-0">
                        <input placeholder="Your Phone Number" type="text" id="user_phone_number" name="user[phone_number]" autocomplete="phone_number" class="form-control" />
                      </div>
                    </div>
                  </div>

                  <div class="field">
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                      <div data-mdb-input-init class="form-outline flex-fill mb-0">
                        <input placeholder="Your Address" type="text" id="user_address" name="user[address]" autocomplete="address" class="form-control" />
                      </div>
                    </div>
                  </div>

                  <div class="field">
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div data-mdb-input-init class="form-outline flex-fill mb-0">
                        <input placeholder="Your Email" type="email" id="user_email" type="email" name="user[email]" autocomplete="email" class="form-control" />
                      </div>
                    </div>
                  </div>

                  <div class="field">
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div data-mdb-input-init class="form-outline flex-fill mb-0">
                        <input placeholder="Password" type="password" id="user_password" name="user[password]" type="password" autocomplete="new-password" class="form-control" />
                      </div>
                    </div>
                  </div>

                  <div class="field">
                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                      <div data-mdb-input-init class="form-outline flex-fill mb-0">
                        <input placeholder="Password confirmation" type="password" id="user_password_confirmation" name="user[password_confirmation]" autocomplete="new-password" class="form-control" />
                      </div>
                    </div>
                  </div>

                  <div class="actions d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button name="commit" type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg" data-disable-with="Sign up">Sign up</button>
                  </div>

                </form>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>